<% layout("/layouts/boilerplate") %>

<div class="container mt-3" style="margin-bottom: 25px;">
    <div class="col-10 col-sm-8 offset-2 edit-form-div">
        <h3>Edit Your Listing</h3>
        <form method="POST" action="/listings/<%= listing._id %>?_method=PATCH" class="form-control needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input name="title" type="text" value="<%= listing.title %>" class="form-control" required>
                <div class="invalid-feedback">
                    Please choose a Title.
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea name="description" class="form-control" required><%= listing.description %></textarea>
                <div class="invalid-feedback">
                    Please add a description.
                </div>
            </div>

            <div class="mb-3">
                <label>Previous Images</label>
                <div class="d-flex flex-wrap">
                    <% if (listing.images && listing.images.length > 0) { %>
                        <% listing.images.forEach((image, index) => { %>
                            <div class="me-2 mb-2">
                                <img src="<%= image.url %>" alt="Image <%= index + 1 %>" style="width: 100px; height: 100px; object-fit: cover;">
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No images available</p>
                    <% } %>
                </div>
            </div>

            <div class="mb-3">
                <label for="images" class="form-label">Upload New Images (You can select multiple files)</label>
                <input name="images" type="file" class="form-control" multiple>
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label class="form-label">Price</label>
                    <input name="price" type="number" value="<%= listing.price %>" class="form-control" required>
                    <div class="invalid-feedback">
                        Please enter a valid price.
                    </div>
                </div>

                <div class="mb-3 col-md-8">
                    <label class="form-label">Country</label>
                    <input name="country" type="text" value="<%= listing.country %>" class="form-control" required>
                    <div class="invalid-feedback">
                        Please choose a Country.
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Location</label>
                <input name="location" type="text" value="<%= listing.location %>" class="form-control" required>
                <div class="invalid-feedback">
                    Please choose a Location.
                </div>
            </div>

            <button class="btn btn-primary">Edit</button>
        </form>
    </div>
</div>
